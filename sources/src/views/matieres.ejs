<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/css/bulma/css/bulma.css">
    <title>Matieres</title>
</head>

<body>
    <%- include('menu.ejs') %>

        <div class="box">
            <h1 class="title"> Mes matières </h1>

            <% if (typeof error !== 'undefined')  {%>
                <p> <% error %> </p>
            <% } %>

            <% if (typeof user !=='undefined' ) { %>
                <h1 class="title"> Authentifié en tant que : <%= user %> </h1>

                <section class="section">
                    <% if (typeof matiere=='undefined' || matiere.length==0) { %>
                        <h2 class="subtitle">Aucune matière </h2>
                    <% } else { %>
                        <article>
                            <h2 class="subtitle">Mes Matières : </h2>
                            <% matiere.forEach(element=> { %>
                                <p> - <%= element['libelle'] %>
                                </p>
                            <% }) %>
                    <% } %>
                        </article>
                        <br>
                        <article> Sect3 </article>
                        <article> Sect4 </article>
                        <article> Sect5 </article>
                </section>
            <% } else { %>
                <h1 class="title"> Problème avec les idenfitifiants </h1>
                <h2 class="subtitle"> Aucun accès autorisé </h2>
            <% } %>
        </div>

</body>

</html>