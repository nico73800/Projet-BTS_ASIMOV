<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/css/bulma/css/bulma.css">
    <title>Accueil</title>
</head>
<body>
    <%- include('menu.ejs') %>

    <div class="box">
      <h1 class="title"> Accueil d'AsiNote </h1>
      <% if (typeof user !== 'undefined' ) { %>
        <h1 class="title"> Authentifié en tant que : <%= user %></h1> 
        
        <section class="section">
          <article> <h2 class="subtitle">Mes Matières : </h2>
            <% matiere.forEach(element => { %>
              <p> - <%= element['libelle'] %> </p>
            <% }) %>
          </article>
          <article> 
            <% if (typeof classeProf == 'undefined') { %>
              <p> Aucune classe </p>
            <% } else { %>
              Mes classes :  <%= classeProf %>
            <% } %>
          </article>
          <article> Sect3 </article>
          <article> Sect4 </article>    
          <article> Sect5 </article>
        </section>
      <% } else { %>
        <h1 class="title"> Problème avec les idenfitifiants </h1>
        <h2 class="subtitle"> Aucun accès autorisé </h2>
      <% } %>
    </div>

</body>
</html>